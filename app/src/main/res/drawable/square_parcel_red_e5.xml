<?xml version="1.0" encoding="utf-8"?><!-- 透明背景的圆角矩形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/red_e5" />

    <!-- 描边 -->
    <stroke
        android:width="@dimen/dimen_1dp"
        android:color="@color/red_e5" />

    <corners android:radius="5dp" />

    <padding
        android:bottom="@dimen/dimen_1dp"
        android:left="@dimen/dimen_5dp"
        android:right="@dimen/dimen_5dp"
        android:top="@dimen/dimen_1dp" />
</shape>